{
    "name": "toreti/cobrefacil-php-client",
    "description": "Cobre FÃ¡cil SDK",
    "homepage": "https://cobrefacil.com.br",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CobreFacil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CobreFacil\\": "tests/"
        }
    },
    "require": {
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "php": "^8.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.6",
        "vlucas/phpdotenv": "^5.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "check": [
            "composer phpcs",
            "composer phpstan"
        ],
        "phpcs": [
            "./vendor/bin/phpcs --encoding=UTF-8 --error-severity=1 --warning-severity=8 --report=full --report-width=75 --tab-width=4 -p --report=json ./"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf ./"
        ]
    }
}
